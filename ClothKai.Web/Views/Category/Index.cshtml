@model IEnumerable<ClothKai.Entities.Category>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <h2>List of Categories</h2>
    <p class="mt-2">
        <a href="@Url.Action("Create","Category")"><input type="button" value="New" class="col-md-1" /></a>
    </p>
    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><img src="@item.ImageURL" alt="@item.Name" style="width:100px;height:90px;" /></td>
                        <td>@item.Description</td>
                        <td>
                            <a href="@Url.Action("Edit","Category",new { ID = item.ID})"><input type="button" value="Edit" class="col-md-4" /></a>
                            <a href="@Url.Action("Delete","Category",new { ID = item.ID})"><input type="button" value="Delete" class="col-md-4" /></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="color:red">No data</td>
                </tr>
            }

        </tbody>
    </table>
</div>